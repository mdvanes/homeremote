{
  "name": "homeremote",
  "version": "2.2.0",
  "private": true,
  "repository": "https://github.com/mdvanes/homeremote",
  "author": "M.D. van Es",
  "license": "MIT",
  "engine": "node >= 15.0.0",
  "scripts": {
    "start:dev": "node writeGitInfo.js dev && ESLINT_NO_DEV_ERRORS=true BROWSER=none react-scripts start",
    "lint": "eslint src/**/*.{ts,tsx}",
    "typecheck": "tsc --noEmit",
    "test": "react-scripts test",
    "test:ci": "CI=true npm run test -- --coverage --colors",
    "validate": "node writeGitInfo.js && npm run lint && npm run typecheck && npm run test:ci",
    "prebuild": "npm run validate",
    "build": "npm run prebuild && react-scripts build",
    "deploy": "cp -r build/* ../homeremote-server/client"
  },
  "dependencies": {
    "@material-ui/core": "^4.9.5",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@mdworld/homeremote-dockerlist": "^1.7.3",
    "@mdworld/homeremote-stream-player": "^1.6.3",
    "@reduxjs/toolkit": "^1.4.0",
    "body-parser": "^1.19.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^4.0.3",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "web-vitals": "^0.2.4"
  },
  "devDependencies": {
    "@testing-library/dom": "^7.28.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@testing-library/user-event": "^12.1.7",
    "@types/css-mediaquery": "^0.1.0",
    "@types/jest": "^26.0.14",
    "@types/react-dom": "^17.0.0",
    "@types/react-redux": "^7.1.7",
    "@types/react-router-dom": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "css-mediaquery": "^0.1.2",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-prettier": "^3.1.2",
    "git-rev-sync": "^3.0.1",
    "prettier": "^2.1.2",
    "typescript": "4.2.3",
    "workbox-background-sync": "^5.1.3",
    "workbox-broadcast-update": "^5.1.3",
    "workbox-cacheable-response": "^5.1.3",
    "workbox-core": "^5.1.3",
    "workbox-expiration": "^5.1.3",
    "workbox-google-analytics": "^5.1.3",
    "workbox-navigation-preload": "^5.1.3",
    "workbox-precaching": "^5.1.3",
    "workbox-range-requests": "^5.1.3",
    "workbox-routing": "^5.1.3",
    "workbox-strategies": "^5.1.3",
    "workbox-streams": "^5.1.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/src/index.tsx",
      "!<rootDir>/src/Reducers/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 10,
        "lines": 10,
        "statements": 10
      }
    },
    "coverageReporters": [
      "text",
      "text-summary",
      "lcov"
    ]
  }
}
