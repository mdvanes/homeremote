{
  "name": "homeremote",
  "version": "2.0.0-alpha.1",
  "private": true,
  "repository": "https://github.com/mdvanes/homeremote",
  "author": "M.D. van Es",
  "license": "MIT",
  "engine": "node >= 12.16.1",
  "dependencies": {
    "@material-ui/core": "^4.9.5",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@mdworld/homeremote-stream-player": "^1.6.3",
    "@reduxjs/toolkit": "^1.4.0",
    "body-parser": "^1.19.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^4.0.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^7.28.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@testing-library/user-event": "^12.1.7",
    "@types/jest": "^26.0.14",
    "@types/react-dom": "^17.0.0",
    "@types/react-redux": "^7.1.7",
    "@types/react-router-dom": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-prettier": "^3.1.2",
    "git-rev-sync": "^3.0.1",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "prettier": "^2.1.2",
    "typescript": "4.0.5"
  },
  "scripts": {
    "start:olddev": "concurrently --kill-others \"BROWSER=none react-scripts start\" \"npm run watch\"",
    "start:olddevserver": "node server/app.js --debugremote | bunyan",
    "start:old": "node server/app.js | bunyan",
    "start:dev": "node writeGitInfo.js dev && BROWSER=none react-scripts start",
    "lint": "eslint src/**/*.{ts,tsx}",
    "prebuild": "node writeGitInfo.js && npm run lint && npm run test:ci",
    "build": "npm run prebuild && react-scripts build",
    "test": "react-scripts test --env=jest-environment-jsdom-sixteen",
    "test:ci": "CI=true npm run test -- --coverage --colors",
    "eject": "react-scripts eject",
    "watch": "npm-watch",
    "deploy": "cp -r build/* ../homeremote-nestjs-server/client"
  },
  "watch": {
    "start:devserver": [
      "server/**/*.js",
      "test/server/**/*.js"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 10,
        "lines": 10,
        "statements": 10
      }
    },
    "coverageReporters": [
      "text",
      "text-summary",
      "lcov"
    ]
  }
}
