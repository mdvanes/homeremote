{
  "name": "homeremote",
  "version": "2.0.0-alpha.1",
  "private": true,
  "repository": "https://github.com/mdvanes/homeremote",
  "author": "M.D. van Es",
  "license": "MIT",
  "engine": "node >= 12.16.1",
  "dependencies": {
    "@material-ui/core": "^4.9.5",
    "@material-ui/icons": "^4.9.1",
    "@mdworld/homeremote-stream-player": "^1.5.0",
    "@reduxjs/toolkit": "^1.4.0",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.12",
    "concurrently": "^5.1.0",
    "connect-ensure-login": "^0.1.1",
    "cookie-parser": "^1.4.4",
    "cp-file": "^9.0.0",
    "ejs": "^3.0.1",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "express-ws": "^4.0.0",
    "id3-writer": "^1.3.0",
    "list-endpoints-express": "^1.0.1",
    "morgan": "^1.9.1",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "promise-ftp": "^1.3.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.3",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "request-promise": "^4.2.5",
    "transmission": "^0.4.10",
    "youtube-dl": "^3.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@testing-library/user-event": "^12.1.7",
    "@types/jest": "^26.0.14",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.7",
    "@types/react-router-dom": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-jest": "^23.8.0",
    "eslint-plugin-prettier": "^3.1.2",
    "git-rev-sync": "^3.0.1",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "node-sass": "^4.13.1",
    "npm-watch": "^0.6.0",
    "prettier": "^1.19.1",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "start:olddev": "concurrently --kill-others \"BROWSER=none react-scripts start\" \"npm run watch\"",
    "start:olddevserver": "node server/app.js --debugremote | bunyan",
    "start:old": "node server/app.js | bunyan",
    "start:dev": "node writeGitInfo.js dev && BROWSER=none react-scripts start",
    "lint": "eslint src/**/*.{ts,tsx}",
    "prebuild": "node writeGitInfo.js && npm run lint && npm run test:ci",
    "build": "npm run prebuild && react-scripts build",
    "test": "react-scripts test --env=jest-environment-jsdom-sixteen",
    "test:ci": "CI=true npm run test -- --coverage --colors",
    "eject": "react-scripts eject",
    "watch": "npm-watch"
  },
  "watch": {
    "start:devserver": [
      "server/**/*.js",
      "test/server/**/*.js"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 10,
        "lines": 10,
        "statements": 10
      }
    },
    "coverageReporters": [
      "text",
      "text-summary",
      "lcov"
    ]
  }
}
